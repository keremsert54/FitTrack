<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_tracking"
            android:textSize="26sp"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/total_water_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_water"
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/water_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progressTint="#1976D2"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/water_summary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/water_goal_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set_daily_goal"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/set_water_goal_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/set_goal"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="24dp"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/water_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_water"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/add_water_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/add_water"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/add_250ml_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/add_water_250ml"
            android:backgroundTint="#00BCD4"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="32dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/back_to_menu"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:padding="10dp"
            android:elevation="2dp" />
    </LinearLayout>
</ScrollView>
